#!/usr/bin/php
<?php
$dir_inc = __DIR__ . '/../inc/';

$dec_bin = "#!{{FILE_PHP_BINARY}}\n";
$vars = file_get_contents($dir_inc . 'vars.inc') . "\n";
$installer = file_get_contents($dir_inc . 'ss_install.inc');
$remover = file_get_contents($dir_inc . 'ss_remove.inc');

if (file_put_contents($dir_inc . 'installer.inc', $vars . $installer)) {
  echo "Built installer: " . $dir_inc . "installer.inc\n";
}

if (file_put_contents($dir_inc . 'remover.inc', $vars . $remover)) {
  echo "Built remover: " . $dir_inc . "remover.inc\n";
}

$punify_files = array(
  'installer.inc',
  'remover.inc',
  'ss.inc'
);

foreach ($punify_files as $file) {
  if ($file != 'ss.inc') {
    file_put_contents($dir_inc . $file . '.pny', $dec_bin);
    $mode = ' >> ';
  } else {
    $mode = ' > ';
  }

  $cmd = 'punify ' . $dir_inc . $file . $mode . $dir_inc . $file . '.pny';

  echo "Punifying with command: '$cmd'\n";

  exec($cmd);
}
