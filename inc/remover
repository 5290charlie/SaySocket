
REMOVE=$LAUNCH_PLIST:$DIR_MAIN:$INSTALLER:$REMOVER

while true; do
    read -p "Unload launch agent? (y/n) " yn
    case $yn in
        [Yy]* ) launchctl unload $LAUNCH_PLIST; break;;
        [Nn]* ) break;;
        * ) echo "Please answer yes or no. (y/n)";;
    esac
done

for path in ${REMOVE//:/ }; do
    if [[ -e $path ]]; then
        while true; do
            if [[ -d $path ]]; then
                type="directory"
            else
                type="file"
            fi

            read -p "Remove $type: $path? (y/n) " yn
            case $yn in
                [Yy]* ) rm -rf $path; break;;
                [Nn]* ) break;;
                * ) echo "Please answer yes or no. (y/n)";;
            esac
        done
    fi
done

echo "SS removal complete."
