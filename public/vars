#!/bin/bash

HOME=~
HASH={{USER_HASH}}
DIR_NAME="{{DIR_MAIN}}"
DIR_MAIN=$HOME/$DIR_NAME
DIR_BIN=$DIR_MAIN/{{DIR_BIN}}
BINARY=$DIR_BIN/{{FILE_MAIN_BINARY}}
BIN_ESC=`echo $BINARY | sed 's/[\\/&]/\\\\&/g'`
SCANNER=$DIR_BIN/{{FILE_MAIN_SCANNER}}
SCAN_ESC=`echo $SCANNER | sed 's/[\\/&]/\\\\&/g'`
MONITOR=$DIR_BIN/monitor
MON_ESC=`echo $MONITOR | sed 's/[\\/&]/\\\\&/g'`
LAUNCH_DIR=$HOME/{{DIR_LAUNCH_AGENTS}}
LAUNCH_PLIST=$LAUNCH_DIR/{{FILE_LAUNCH_PLIST}}
PING_DIR={{DIR_PING}}
PING_BIN=$PING_DIR/{{FILE_PING_BINARY}}
PING_MON=$PING_DIR/{{FILE_PING_MONITOR}}
PING_BIN_ESC=`echo $PING_BIN | sed 's/[\\/&]/\\\\&/g'`
PING_MON_ESC=`echo $PING_MON | sed 's/[\\/&]/\\\\&/g'`
PHP=`which php`
LOCAL_BIN={{DIR_LOCAL_BIN}}
INSTALLER=$LOCAL_BIN/{{FILE_INSTALLER}}
REMOVER=$LOCAL_BIN/{{FILE_REMOVER}}